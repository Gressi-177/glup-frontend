mixin storyItem(src="../images/img-blog1.png", dateNumber="5", dateText="Jun",title=" Lorem ipsum dolor sit amet", desc = " lorem ipsum dolor sit amet consectetuer adipiscing elit sed diam nonummy nibh",views=1000, comment=100)
  li.story-item
    .story-media
      img.story-image(src=src)
      .story-date
        span.story-date-number=dateNumber
        span.story-date-text.text.text--light=dateText
    h3.story-title=title
    .story-desc.text
      p.story-desc-inner= desc
    .story-meta
      .story-meta-item
        i.fa.fa-eye.story-meta-icon
        span.story-meta-number.text=views
      .story-meta-item
        i.fa.fa-comment.story-meta-icon
        span.story-meta-number.text=comment
